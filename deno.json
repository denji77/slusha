{
  "compilerOptions": {
    "lib": ["deno.window", "deno.unstable"],
    "strict": true
  },
  "lint": {
    "include": ["*.ts", "lib/"],
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-unused-vars"]
    }
  },
  "fmt": {
    "include": ["*.ts", "lib/"],
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 4,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve"
  },
  "imports": {
    "ai": "npm:ai@^4.1.45",
    "@ai-sdk/google": "npm:@ai-sdk/google@^1.1.16",
    "@deno-library/logger": "jsr:@deno-library/logger@^1.1.9",
    "grammy": "https://deno.land/x/grammy@v1.34.0/mod.ts"
  }
}
